!!! XML
!!!
%html{html_attrs}
  %head
    %title TimeCert
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    %meta{:name=>"viewport",:content=>"width=700"}

  %body
    #container
      #header
        %ul.top_bar
          - unless current_page?("/developers")
            %li.first
              %a{:href=>"/developers"}
                Developers
          - unless current_page?("/github")
            %li
              %a{:href=>"/github"} GitHub integration
          - unless current_page?("/generate")
            %li
              %a{:href=>"/generate"}
                Generate digest
        .logo
          %a{:href => "/"}
            %img{:src=>'/images/logo75.png',:alt=>'TimeCert',:width=>"75",:height=>'75'}
      #content
        = yield
      #footer
        %ul
          %li.first 
            %a{:href=>"http://github.com/pelle/timecert/tree/master"} Source
          %li
            %a{:href=>"/audit"} Audit
          %li
            %a{:href=>"http://github.com/pelle/timecert/wikis"} Wiki
          %li
            %a{:href=>"http://stakeventures.com"} Blog
        %p &copy; 2006-2009 Pelle Braendgaard and Stake Ventures Inc.
    =render :partial=>"shared/ga"
        
